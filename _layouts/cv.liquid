---
layout: default
---
{% if site.data.cv and site.data.cv.cv.sections %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            {% if page.cv_pdf contains '://' %}
              href="{{ page.cv_pdf }}"
            {% else %}
              href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
            {% endif %}
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
          >
            <i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for section in site.data.cv.cv.sections %}
          {% assign section_title = section[0] %}
          {% assign section_content = section[1] %}
          
          <a class="anchor" id="{{ section_title }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ section_title | replace: '_', ' ' | capitalize }}</h3>
            <div>
              {% comment %}
                RenderCV uses a flexible structure. We need to detect the entry type based on keys.
                Common keys: 
                - institution (Education)
                - company (Experience)
                - authors (Publication)
                - label (Skills)
                - bullet (Text/Bullet)
              {% endcomment %}
              
              <ul class="card-text font-weight-light list-group list-group-flush">
              {% for entry in section_content %}
                <li class="list-group-item">
                  
                  {% if entry.institution %}
                    <!-- Education Entry -->
                    <div class="row">
                      <div class="col-md-3 text-center" style="min-width: 75px">
                        <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px; width: 100%; display: inline-block;">
                          {{ entry.start_date }} - {{ entry.end_date }}
                        </span>
                        {% if entry.location %}
                          <p class="location mt-2">
                            <i class="fa-solid fa-location-dot iconlocation"></i> {{ entry.location }}
                          </p>
                        {% endif %}
                      </div>
                      <div class="col-md-10">
                        <h6 class="title font-weight-bold">{{ entry.institution }}</h6>
                        <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ entry.area }} -- {{ entry.degree }}</h6>
                        {% if entry.highlights %}
                          <ul class="items">
                            {% for highlight in entry.highlights %}
                              <li><span class="item">{{ highlight }}</span></li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </div>
                    </div>

                  {% elsif entry.company %}
                    <!-- Experience Entry -->
                    <div class="row">
                       <div class="col-md-2 text-center" style="min-width: 75px">
                        <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                          {{ entry.start_date }} - {{ entry.end_date }}
                        </span>
                        {% if entry.location %}
                          <p class="location mt-2">
                            <i class="fa-solid fa-location-dot iconlocation"></i> {{ entry.location }}
                          </p>
                        {% endif %}
                      </div>
                      <div class="col-md-10">
                        <h6 class="title font-weight-bold">{{ entry.company }}</h6>
                        <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ entry.position }}</h6>
                        {% if entry.highlights %}
                          <ul class="items">
                            {% for highlight in entry.highlights %}
                              <li><span class="item">{{ highlight }}</span></li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </div>
                    </div>

                  {% elsif entry.authors %}
                    <!-- Publication Entry -->
                    <div class="row">
                      <div class="col-md-2 text-center" style="min-width: 75px">
                         <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                          {{ entry.date }}
                        </span>
                      </div>
                      <div class="col-md-10">
                        <h6 class="title font-weight-bold">{{ entry.title }}</h6>
                         <div class="ml-1 ml-md-4">
                          {% for author in entry.authors %}
                            <span class="item">{{ author }}{% unless forloop.last %}, {% endunless %}</span>
                          {% endfor %}
                        </div>
                         {% if entry.doi %}
                          <div class="ml-1 ml-md-4">
                            <a href="https://doi.org/{{ entry.doi }}" target="_blank">DOI: {{ entry.doi }}</a>
                          </div>
                        {% endif %}
                      </div>
                    </div>

                  {% elsif entry.label %}
                    <!-- Skills Entry -->
                     <div class="row">
                      <div class="col-md-2 font-weight-bold">
                        {{ entry.label }}
                      </div>
                      <div class="col-md-10">
                        {{ entry.details }}
                      </div>
                    </div>

                  {% elsif entry.name %}
                    <!-- Project Entry (Usually has name) -->
                     <div class="row">
                      <div class="col-md-2 text-center" style="min-width: 75px">
                         <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                          {{ entry.start_date }} {% if entry.end_date %}- {{ entry.end_date }}{% endif %}
                        </span>
                      </div>
                      <div class="col-md-10">
                         <h6 class="title font-weight-bold">{{ entry.name }}</h6>
                          {% if entry.summary %}
                            <div class="ml-1 ml-md-4">{{ entry.summary }}</div>
                          {% endif %}
                          {% if entry.highlights %}
                          <ul class="items">
                            {% for highlight in entry.highlights %}
                              <li><span class="item">{{ highlight }}</span></li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </div>
                    </div>
                    
                  {% elsif entry.bullet %}
                     <!-- Bullet/Text Entry -->
                     <span class="item">{{ entry.bullet }}</span>
                  
                  {% else %}
                    <!-- Fallback for simple string entries or unknown structures -->
                    {{ entry }}
                  {% endif %}

                </li>
              {% endfor %}
              </ul>
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% else %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title"> CV Data Not Found </h1>
    </header>
    <article>
      <p> Please ensure assets/yml/cv.yml is correctly formatted and loaded in _config.yml </p>
    </article>
  </div>
{% endif %}
